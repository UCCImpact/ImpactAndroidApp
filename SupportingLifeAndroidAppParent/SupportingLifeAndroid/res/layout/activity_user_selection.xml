<?xml version="1.0" encoding="utf-8"?>
<!-- ============================================================ -->
<!-- USER TYPE SELECTION SCREEN 								  -->
<!-- ============================================================ -->
   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/SupportingLifePage"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="6dip">

	<View
		android:layout_width="match_parent"
		android:layout_height="7dp" />
    
	 <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- ============================================================ -->
		<!-- GUEST USER BUTTON -->
		<!-- ============================================================ -->		
		<Button android:id="@+id/ic_user_selection_guest_user_button"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_marginTop="20dp" 
			android:layout_marginLeft="35dp"
			android:background="@drawable/ic_user_selection_guest_user_button"
			android:onClick="onClickUserTypeButton" />
		
		<TextView
		    android:id="@+id/user_selection_guest_user_button_text"
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ic_user_selection_guest_user_button"
		    android:layout_marginTop="2dp"
		    android:text="@string/dashboard_imci_assessment_button"
		    android:textColor="@color/DarkGreen"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:gravity="center" />
		
		<!-- ============================================================ -->
		<!-- HSA USER BUTTON -->
		<!-- ============================================================ -->
		<Button
		    android:id="@+id/ic_user_selection_hsa_user_button"
		    android:layout_width="90dp"
		    android:layout_height="90dp"
		    android:layout_marginTop="20dp" 
			android:layout_marginRight="35dp" 
		    android:layout_alignParentRight="true"
		    android:background="@drawable/ic_user_selection_hsa_user_button"
		    android:onClick="onClickUserTypeButton" />
		
		<TextView
		    android:id="@+id/user_selection_hsa_user_button_text"
		    android:layout_width="120dp"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ic_user_selection_hsa_user_button"
		    android:layout_marginTop="2dp"
		    android:text="@string/dashboard_ccm_assessment_button"
		    android:textColor="@color/DarkGreen"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:gravity="center" />

	</RelativeLayout>
			
</LinearLayout>